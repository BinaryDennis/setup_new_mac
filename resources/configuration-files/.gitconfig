[core]
	excludesfile = $HOME/.gitignore_global
	editor = /usr/bin/vim

[log]
	decorate = true

[user]
	name = Dennis Charmington
	email = dennis@charmington.se
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIAfibH1Gn5XnMvjM3ZDCJuFHHcbWfXmv4+ib64WNeZZU
	
[color]
	ui = true

[push]
	default = current
	useForceIfIncludes = true

[alias]
	logs =  log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(dim green)[%an]' --abbrev-commit --decorate --date=relative
	logg =  log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(green)[%an]' --abbrev-commit --decorate --date=relative --graph #--simplify-by-decoration
	logn =  log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(green)[%an]' --abbrev-commit --decorate --date=relative --numstat
	logh =  log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(green)[%an]' --abbrev-commit --decorate --date=relative --graph --full-history --all
	logdev = log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(dim green)[%an]' --abbrev-commit --decorate --date=relative --no-merges develop..
	logdev = log --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(bold red)%d %C(reset)%s %C(dim green)[%an]' --abbrev-commit --decorate --date=relative --no-merges master..
	
	showdev = show --no-merges develop..
	showmaster = show --no-merges master..
	
	branch-touched = for-each-ref --sort=-committerdate --format="%(committerdate:relative)%09%(refname:short)" refs/heads

	st = status
	ci = commit
	co = checkout
	cp = cherry-pick
	br = branch
	diff = diff --word-diff
	dc = diff --cached
	ds = diff --staged
	
	cod = checkout develop
	com = checkout master
	
	sl = stash list
	sa = stash apply
	ss = stash save
	sd = stash drop
	
	fetchall = fetch --all --tags
	pruneremote = remote update origin --prune
	prunelocal = fetch --prune
	pruneorigmaster = !git branch -q --merged origin/master | grep -v master | grep -v develop | grep -v testflight | xargs git branch -d
	pruneorigdev = !git branch -q --merged origin/develop | grep -v master | grep -v develop | grep -v testflight | xargs git branch -d

	push-with-lease = push --force-with-lease --force-if-includes

[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code -n --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code -n --wait --diff $LOCAL $REMOTE
[gpg]
        format = ssh
[commit]
        gpgsign = true
